<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<header class="flex justify-between items-center w-full h-20 bg-amber-200">
				<a href={{"/home"}}>
					<h1 class="ml-14 text-2xl">CubeDesign</h1>
				</a>
				<div class="flex justify-center items-center gap-5 mr-14">
						
					{% if app.user %}
						<a href="/profil">{{ app.user.firstName ~ ' ' ~ app.user.lastName}}</a>
						<a href="{{ path('app_logout') }}">Deconnexion</a>
					{% else %}
						<a href={{"/login"}}>Connexion</a>
						<a href={{"/register"}}>Inscription</a>
					{% endif %}
                        <a href={{"/cart"}}>Panier</a>
				</div>
			</header>
		{% endblock %}

		{% block body %}{% endblock %}
	</body>
</html>
