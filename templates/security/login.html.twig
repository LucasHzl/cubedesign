{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<header class="flex justify-between items-center w-full h-20 bg-amber-200">
		<a href={{"/home"}}>
			<h1 class="ml-14 text-2xl">CubeDesign</h1>
		</a>
		<div class="flex justify-center items-center gap-5 mr-14">
			<a href={{"/login"}}>Connexion</a>
			<a href={{"/register"}}>Inscription</a>
			<a href={{"/cart"}}>Panier</a>
		</div>
	</header>


	<section class="flex justify-center items-center mt-40">
		<div class="w-full max-w-xs">
			<form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes déjà connecté avec l'adresse mail : 
						{{ app.user.userIdentifier }} !
                        <br>
                        <br>
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h2 class="h3 mb-3 font-weight-normal">S'identifier</h2>

				<div class="mb-4 ">
					<label for="inputEmail" class="block text-gray-700 text-sm font-bold mb-2">Email</label>

					<input type="email" value="{{ last_username }}" name="email" placeholder="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
				</div>

				<div class="mb-6">
					<label for="inputPassword" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
					<input type="password" name="password" id="inputPassword" placeholder="mot de passe" class="form-control" autocomplete="current-password" required class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline">
					<p class="text-red-500 text-xs italic">Veuillez saisir votre mot de passe</p>
				</div>
				<div class="flex items-center justify-between">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="bg-amber-500 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">Connexion</button>
				</div>
			</form>
		</div>
	</section>

{% endblock %}
