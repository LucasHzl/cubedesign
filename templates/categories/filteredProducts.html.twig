{% extends 'base.html.twig' %}

{% block title %}CubeDesign - {{ category.title }}{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center h-96 border-2 border-solid">
        <p>background image</p>
    </div>

    <h2 class="text-xl text-center mt-8">Collection {{ category.title }}</h2>

    <div class="flex flex-wrap justify-center mt-6 gap-4">
        {% for filteredProduct in filteredProducts %}
            <a href="{{ path('app_product_detail', {'id': filteredProduct.id} ) }}" class="w-full md:w-1/3 lg:w-1/4 xl:w-1/5 p-4">
                <div class="border-2 border-solid rounded-md relative">
                    <img class="w-full" src="{{ asset('assets/images/products/' ~ filteredProduct.imageName) }}" alt="Image du produit {{ filteredProduct.title }}">
                    <div class="absolute inset-0 bg-amber-600 bg-opacity-85 opacity-0 hover:opacity-100 transition-opacity duration-300 flex justify-center items-center">
                        <div class="text-white text-center p-4">
                            <p class="font-semibold">{{ filteredProduct.title }}</p>
                            <p>{{ filteredProduct.price }}â‚¬</p>
                            <button class="bg-amber-500 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-2">Ajouter au panier</button>
                        </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

    <footer class="flex justify-start items-center w-full h-20 bg-amber-800 mt-12">
        <a href="#" class="text-white ml-4">Contact</a>
    </footer>
{% endblock %}
