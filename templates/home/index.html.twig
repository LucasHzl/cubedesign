{% extends 'base.html.twig' %}

{% block title %}CubeDesign - Accueil
{% endblock %}

{% block body %}
	{% for message in app.flashes('info') %}
		<div class="w-full absolute top-10  text-center mt-10 bg-red-100 border inline-block border-red-200 text-red-600 p-4 rounded text-lg mb-8 flashMessage" role="alert">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('success') %}
		<div class="w-full absolute top-10  text-center mt-10 bg-green-100 border inline-block border-green-200 text-green-600 p-4 rounded text-lg mb-8 flashMessage" role="alert">
			{{ message }}
		</div>
	{% endfor %}
	<div class="flex w-full h-96 md:h-64 lg:h-96 justify-center items-center mt-8">
    <img class="w-full h-full object-cover p-6" src="{{ asset('images/banner.png') }}" alt="Image de la bannière du site">
</div>



	<h2 class="text-center mt-8 text-xl">Collections</h2>
	<h3 class="text-center mt-2 text-xs">Découvrez toutes nos collections de cubes aux couleurs des plus grands courants de design</h3>

	<div class="flex justify-center items-center flex-wrap mt-8">
		{% for category in categories %}
			<a href="{{ path('app_category_filtered', {'id': category.id}) }}" class="w-full md:w-1/3 lg:w-1/4 xl:w-1/5 p-2">
				<div class="border-2 border-solid rounded-md h-48 flex justify-center items-center">{{ category.title }}</div>
			</a>
		{% endfor %}
	</div>

	<h2 class="text-center mt-16 mb-8 text-xl">Nos Produits</h2>

	<div class="flex justify-center items-center flex-wrap">
		{% for product in products %}
			<a href="{{ path('app_product_detail', {'id': product.id}) }}" class="w-full sm:w-1/2 md:w-1/4 lg:w-1/5 p-2">
				<div class="relative rounded-md h-64">
					<img class="w-full rounded-md h-full object-cover" src="{{ asset('assets/images/products/' ~ product.imageName) }}" alt="Image du produit {{ product.title }}">
					<div class="absolute inset-0 flex justify-center rounded-md items-center bg-amber-600 opacity-0 hover:opacity-100 bg-opacity-80 transition-opacity duration-300">
						<div class="text-white text-center">
							<p class="text-lg font-semibold">{{ product.title }}</p>
							<p class="text-sm">{{ product.price }}€</p>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
	<footer class="flex justify-start items-center w-full h-20 bg-amber-800 mt-12">
		<a href="/contact" class="text-white ml-4">Contact</a>
		<a href="/submitanidea" class="text-white ml-4">Soumettre une idée</a>
	</footer>
{% endblock %}
